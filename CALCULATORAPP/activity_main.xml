<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

 <TextView
     android:id="@+id/text"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="CASIO"
     android:layout_alignParentTop="true"
     android:layout_alignParentEnd="true"
     android:textSize="30sp"
     android:gravity="right" />

 <EditText
     android:id="@+id/edit"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:hint="0"
     android:layout_below="@id/text"
     android:layout_marginTop="20dp"
     android:gravity="right"
     android:layout_marginStart="15dp"
     android:layout_marginEnd="15dp" />

 <Button
     android:id="@+id/one"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:text="1"
     android:layout_below="@id/edit"
     android:layout_marginTop="20dp"
     android:layout_marginStart="15dp" />

 <Button
     android:id="@+id/two"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:text="2"
     android:layout_toEndOf="@id/one"
     android:layout_below="@id/edit"
     android:layout_marginTop="20dp"
     android:layout_marginStart="5dp" />

 <Button
     android:id="@+id/three"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:text="3"
     android:layout_toEndOf="@id/two"
     android:layout_below="@id/edit"
     android:layout_marginTop="20dp"
     android:layout_marginStart="5dp" />

 <Button
     android:id="@+id/four"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:text="4"
     android:layout_below="@id/one"
     android:layout_marginTop="20dp"
     android:layout_marginStart="15dp" />

 <Button
     android:id="@+id/five"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:text="5"
     android:layout_toEndOf="@id/four"
     android:layout_below="@id/two"
     android:layout_marginTop="20dp"
     android:layout_marginStart="5dp" />

 <Button
     android:id="@+id/six"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:text="6"
     android:layout_toEndOf="@id/five"
     android:layout_below="@id/three"
     android:layout_marginTop="20dp"
     android:layout_marginStart="5dp" />

 <Button
     android:id="@+id/seven"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:text="7"
     android:layout_below="@id/four"
     android:layout_marginTop="20dp"
     android:layout_marginStart="15dp" />

 <Button
     android:id="@+id/eight"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:text="8"
     android:layout_toEndOf="@id/seven"
     android:layout_below="@id/five"
     android:layout_marginTop="20dp"
     android:layout_marginStart="5dp" />

 <Button
     android:id="@+id/nine"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:text="9"
     android:layout_toEndOf="@id/eight"
     android:layout_below="@id/six"
     android:layout_marginTop="20dp"
     android:layout_marginStart="5dp" />

 <Button
     android:id="@+id/point"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:text="."
     android:layout_below="@id/seven"
     android:layout_marginTop="20dp"
     android:layout_marginStart="15dp" />

 <Button
     android:id="@+id/zero"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:text="0"
     android:layout_toEndOf="@id/point"
     android:layout_below="@id/eight"
     android:layout_marginTop="20dp"
     android:layout_marginStart="5dp" />

 <Button
     android:id="@+id/clear"
     android:layout_width="60dp"
     android:layout_height="60dp"
     android:text="c"
     android:layout_toEndOf="@id/zero"
     android:layout_below="@id/nine"
     android:layout_marginTop="20dp"
     android:layout_marginStart="5dp" />


 <Button
     android:id="@+id/plus"
     android:layout_width="220dp"
     android:layout_height="53dp"
     android:text="+"
     android:layout_toEndOf="@id/three"
     android:layout_below="@id/edit"
     android:layout_marginTop="20dp"
     android:layout_marginEnd="20dp" />

 <Button
     android:id="@+id/minus"
     android:layout_width="220dp"
     android:layout_height="53dp"
     android:text="-"
     android:layout_toEndOf="@id/six"
     android:layout_below="@id/plus"
     android:layout_marginTop="25dp"
     android:layout_marginEnd="20dp" />

 <Button
     android:id="@+id/division"
     android:layout_width="220dp"
     android:layout_height="53dp"
     android:text="/"
     android:layout_toEndOf="@id/nine"
     android:layout_below="@id/minus"
     android:layout_marginTop="25dp"
     android:layout_marginEnd="20dp" />

 <Button
     android:id="@+id/multiplication"
     android:layout_width="220dp"
     android:layout_height="53dp"
     android:text="X"
     android:layout_toEndOf="@id/clear"
     android:layout_below="@id/division"
     android:layout_marginTop="25dp"
     android:layout_marginEnd="20dp" />


 <Button
     android:id="@+id/equals"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="="
     android:layout_below="@id/point"
     android:layout_marginStart="40dp"
     android:layout_marginEnd="40dp"
     android:layout_marginTop="20dp" />

</RelativeLayout>
